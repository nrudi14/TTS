<h1><%= @user.username %></h1>
<h2><%= @user.location %></h2>
<h3><%= @user.bio %></h3>

<div class="row">
	<% @user.tweets.each do |tweet| %>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class= "panel-body">
				<p><%= tweet.message %></p>
			</div>
		</div>
	</div>
	<% end %>
</div>
	<%= form_tag('/now_following') do %>
	<span class="invisible">
		<%= text_field_tag :follow_id, @user.id %>
	</span><br />
	<%= submit_tag 'Follow', class: 'btn btn-primary' %>
	<% end %>
</div>